---
import { Image } from "astro:assets";
const { title, url, tagType, showImage = "block", imgsrc, imgalt, description, id } = Astro.props;
const Tag = tagType || "h2";

---

<li class="flex">
  <a href={url+ "/" +id} aria-hidden="true" class="flex flex-col gap-1">
    <figure class={`${showImage}`}>
      <Image src={imgsrc} alt={imgalt} width={500} height={500} />
    </figure>
    <Tag class="font-bold uppercase md:text-sm lg:text-xl">
      {title}
    </Tag>
    <p class="md:text-xs">{description}...</p>
  </a>
</li>
