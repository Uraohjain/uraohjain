---
import BaseLayout from "../../../layouts/Base.astro";
import NewsCard from "../../../components/NewsCard.astro";

const allNews = await Astro.glob("../../fi/news/*.md");
const pageTitle = "Ajankohtaista";
---

<BaseLayout pageTitle={pageTitle}>
  <main class="h-full px-5 pb-16 md:px-[5.625rem]">
    <h1 class="pb-16 pt-10 text-center text-[2rem] font-bold text-u+burg">
      {pageTitle}
    </h1>
    <section aria-label="New Blog News" class="pb-10">
      <ul
        class="flex flex-col items-center md:grid md:grid-cols-3 md:gap-4 lg:grid-cols-4"
      >
        {
          allNews.map((news) => (
            <NewsCard
              frontmatter={news.frontmatter}
              url={news.url}
              tagType="h2"
            />
          ))
        }
      </ul>
    </section>
  </main>
</BaseLayout>
