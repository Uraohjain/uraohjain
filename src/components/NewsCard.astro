---
import { Image } from "astro:assets";
const { title, url, tagType, showImage = "block", imgsrc, imgalt, description, id } = Astro.props;
const Tag = tagType || "h2";

---

<li class="flex">
  <a href={url + "/" + id} aria-hidden="true" class="flex flex-col gap-1 items-center text-center md:items-start md:text-left w-full">
    <figure class={`${showImage} flex items-center justify-center md:items-start md:justify-start w-full`}>
      <Image 
        src={imgsrc} 
        alt={imgalt} 
        class="w-full h-auto max-w-[200px] max-h-[200px] md:max-w-[200px] md:max-h-[200px] lg:max-w-[300px] lg:max-h-[300px]" 
        width={300} 
        height={300} 
      />
    </figure>
    <div class="flex flex-col justify-between w-full">
      <div>
        <Tag as={tagType} class="font-bold uppercase md:text-sm lg:text-xl">
          {title}
        </Tag>
      </div>
      <div>
        <p class="md:text-xs pb-5">{description}...</p>
      </div>
    </div>
  </a>
</li>
