---
import { Image } from "astro:assets";
const {
  title,
  url,
  tagType,
  showImage = "block",
  imgsrc,
  imgalt,
  description,
  id,
} = Astro.props;
const Tag = tagType || "h2";
---

<li class="mx-auto flex max-w-[320px]">
  <a
    href={url + "/" + id}
    aria-hidden="true"
    class="flex w-full flex-col items-center gap-1 text-center md:items-start md:text-left"
  >
    <figure
      class={`${showImage} flex items-center justify-center md:items-start md:justify-start w-full`}
    >
      <Image
        src={imgsrc}
        alt={imgalt}
        class="h-auto w-full"
        width={300}
        height={300}
      />
    </figure>
    <div class="flex w-full flex-col justify-between">
      <div>
        <Tag
          as={tagType}
          class="wrap break-words font-bold uppercase md:text-sm lg:text-xl"
        >
          {title}
        </Tag>
      </div>
      <div>
        <p class="pb-5 md:text-xs">{description}...</p>
      </div>
    </div>
  </a>
</li>
