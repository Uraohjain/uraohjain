---
import { Image } from "astro:assets";
const { title, url, tagType, showImage = "block", imgsrc, imgalt, description, id } = Astro.props;
const Tag = tagType || "h2";

---

<li class="flex">
  <a href={url + "/" + id} aria-hidden="true" class="flex flex-col gap-1 items-start">
    <figure class={`${showImage} flex items-start`}>
      <Image src={imgsrc} alt={imgalt} width={300} height={300} />
    </figure>
    <div class="flex flex-col justify-between">
      <div>
        <Tag as={tagType} class="font-bold uppercase md:text-sm lg:text-xl">
          {title}
        </Tag>
      </div>
      <div>
        <p class="md:text-xs">{description}...</p>
      </div>
    </div>
  </a>
</li>