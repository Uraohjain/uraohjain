<BaseLayout pageTitle={pageTitle}>
  <main class="px-5 pb-16 md:px-[5.625rem]">
    <section>
      <h2 class="pb-16 pt-10 text-center text-[2rem] font-bold text-u+burg">
        {pageTitle}
      </h2>
      <MultiStepForm client:load />
    </section>
  </main>
</BaseLayout>
