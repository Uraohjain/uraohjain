---
import { Image } from "astro:assets";
const { frontmatter, url, tagType, showImage = "block" } = Astro.props;
const Tag = tagType || "h2";
const { title, date, author, image, description } = frontmatter;
---

<li>
  <a href={url} aria-hidden="true">
    <figure class={showImage}>
      <!-- Temporary code to display only one news card. Use Image compon}}ent above to display more than one news -->
      <Image src={image.src} alt={image.alt} width={500} height={500} />
    </figure>
    <Tag class="uppercase text-xl">
      {title}
    </Tag>

    <p class="">{description}...</p>
  </a>
</li>
